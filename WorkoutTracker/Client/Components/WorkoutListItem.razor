@using WorkoutTracker.Shared.Models

<div class="card col">
    <div class="card-body">
        <div class="card-title">
            <h3>@Workout.Name</h3>
        </div>
        <div class="row">
            @if (Workout.Scheduled > 0)
            {
                <span>@Workout.Scheduled</span>
            }

        </div>
        <div class="row">
            <span>Exercises: @Workout.WorkoutExercises.Count()</span>
        </div>
        <div class="d-flex row">
            <div class="ml-auto">
                <a href="workouts/@Workout.Id">Open</a>
            </div>
        </div>
    </div>

</div>

@code {
    [Parameter] public WorkoutModel Workout { get; set; }
}
