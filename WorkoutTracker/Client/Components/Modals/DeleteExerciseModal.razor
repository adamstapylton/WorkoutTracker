
<div class="modal fade" id="deleteExerciseModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Log Weight</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (Exercise != null)
                {
                    <div>
                        <p>Are you sure want to remove @Exercise.Exercise.Name from your workout?</p>
                    </div>
                    @if (Message != null)
                    {
                        <div>
                            <div class="alert alert-danger">
                                <span>@Message</span>
                                <button class="close">
                                    &times;
                                </button>
                            </div>
                        </div>
                    }
                    <div>
                        <button class="btn btn-danger mr-2 btn-full-width" @onclick="RemoveExercise">
                            Delete
                        </button>
                    </div>
                }
                else
                {
                    <LoadingSpinner></LoadingSpinner>
                }

            </div>
            <div class="modal-footer">
                <button class="btn-secondary btn btn-full-width" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>

