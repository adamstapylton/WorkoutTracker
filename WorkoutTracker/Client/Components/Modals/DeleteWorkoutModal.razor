
<div class="modal fade" id="deleteWorkoutModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Log Weight</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <p>Are you sure want to delete @Workout.Name</p>
                </div>
                @if (Message != null)
                {
                    <div>
                        <div class="alert alert-danger">
                            <span>@Message</span>
                            <button class="close">
                                &times;
                            </button>
                        </div>
                    </div>
                }
                <div>
                    <button class="btn btn-danger mr-2 btn-full-width" @onclick="DeleteWorkout">
                        Delete
                    </button>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn-secondary btn btn-full-width" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>

